@model BestBankApp.Services.Helpers.ClientPayload
@{
    ViewBag.Title = "Create";
}

<h2 class="ml-3">Create a client</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal row pl-2">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group col-md-4">
        <label>Surname</label>

        @Html.EditorFor(model => model.Surname, new
        {
            htmlAttributes =
            new { @class = "form-control", required = "required" }
        })

        @Html.ValidationMessageFor(model => model.Surname, "",
            new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-4">
        <label>Name</label>

        @Html.EditorFor(model => model.Name, new
   {
       htmlAttributes =
            new { @class = "form-control", required = "required" }
   })

        @Html.ValidationMessageFor(model => model.Name, "",
            new { @class = "text-danger" })
    </div>

    <div class="form-group col-md-4">
        <label>Birthday</label>

        @Html.EditorFor(model => model.Birthday, new
   {
       htmlAttributes =
            new { @class = "form-control", required = "required", @type = "date", @format = "dd/MM/yyyy" }
        })

        @Html.ValidationMessageFor(model => model.Birthday, "",
            new { @class = "text-danger" })
    </div>

    <div class="form-group col-md-4">
        <label>Salary</label>

        @Html.EditorFor(model => model.Salary, new
   {
       htmlAttributes =
            new { @class = "form-control", required = "required", @pattern = "^([0]{1}[,][0-9]{1,3}|[1-9]{1}[0-9]*([,][0-9]{1,2})?)$" }
   })

        @Html.ValidationMessageFor(model => model.Salary, "Fractional numbers are written with a comma, for example: 2500,55",
            new { @class = "text-secondary" })
    </div>

    <div class="form-group col-12">
        <button type="submit" value="NewClient" class="btn btn-primary px-5">Create</button>
        <button class="btn btn-outline-primary ml-3 px-5">@Html.ActionLink("Back", "Index")</button>
    </div>

</div>
}
