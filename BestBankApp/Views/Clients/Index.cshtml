@model IEnumerable<BestBankApp.Models.Clients>
@{
    ViewBag.Title = "Clients";
}
<h2> Clients</h2>

<div class="row pl-1 mb-3">
    <label class="col-12">Search by Surname</label>
    <div class="col-8">
        @using (Html.BeginForm("Index", "Clients", FormMethod.Post))
        {
            <div class="row">
                <div class="col-6">
                    @Html.TextBox("surname", null, new { @style = " width:100%; height: 100%" })
                </div>
                <div class="col-6"><input type="submit" value="Search" class="btn btn-outline-secondary" /></div>
            </div>
        }
    </div>

    <div class=" col-4 d-flex justify-content-end">
        <button type="button" class=" btn btn-primary">
            @Html.ActionLink("Create a new client", "NewClient", "Clients", null, new { @class = "create" })
        </button>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Surname</th>
            <th>Name</th>
            <th>Birthday</th>
            <th>Create</th>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Surname) </td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Birthday)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt) </td>
                <td>
                    <button type="button" class="btn btn-link">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    </button>

                    <button type="button" class="btn btn-link">
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </button>

                    <button type="button" class="btn btn-primary">
                        @Html.ActionLink("Apply for credit", "CreditApply", "CreditApplications", new { id = item.Id}, new { @class = "create" })
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Styles
{
    <style type="text/css">

        .create {
            color: white !important;
            text-decoration: none !important;
        }

        .create:hover {
            color: white !important;
            text-decoration: none !important;
        }
    </style>
}