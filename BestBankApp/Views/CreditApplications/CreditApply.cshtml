@model BestBankApp.Services.Helpers.CreditApplyPayload
@{
    ViewBag.Title = "Apply for a credit";
}

<h2 class="ml-5">Create a client</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal pl-5">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="border row  p-4">
            <div class="form-group col-md-4">
                <label>Client Id</label>
                @Html.EditorFor(model => model.ClientId, new
                {
                    htmlAttributes =
                    new { @class = "form-control", @readonly = "readonly" }
                })
            </div>
            <div class="form-group col-md-4">
                <label>Surname</label>
                @Html.EditorFor(model => model.Surname, new
                {
                    htmlAttributes =
                    new { @class = "form-control", @readonly = "readonly" }
                })
            </div>
            <div class="form-group col-md-4">
                <label>Name</label>
                @Html.EditorFor(model => model.Name, new
                {
                    htmlAttributes =
                    new { @class = "form-control", @readonly = "readonly" }
                })
            </div>

            <div class="form-group col-md-4">
                <label>Birthday</label>
                @Html.EditorFor(model => model.Birthday, new
                {
                    htmlAttributes =
                    new { @class = "form-control", @readonly = "readonly" }
                })
            </div>

            <div class="form-group col-md-4">
                <label>Salary</label>
                @Html.EditorFor(model => model.Salary, new
                {
                    htmlAttributes =
                    new { @class = "form-control", @readonly = "readonly" }
                })
            </div>
        </div>

        <div class="p-4">
            <div class="form-group col-12">
                <label>Amount of credit (from 100 000 to 2 000 000)</label>
                @Html.EditorFor(model => model.AmountOfCredit, new
                    {
                        htmlAttributes =
                            new
                            {
                                @class = "form-control text-center col-md-4",
                                @required = "required",
                                @type = "number",
                                @min = 100000,
                                @max = 2000000
                            }
                    })
            </div>
            <div class="form-group col-12">
                <label>Term (in months from 13 to 60)</label>
                @Html.EditorFor(model => model.TermsInMonths, new
                   {
                       htmlAttributes =
                            new
                            {
                                @class = "form-control text-center col-md-4",
                                @required = "required",
                                @type = "number",
                                @min = 13,
                                @max = 60
                            }
                   })
            </div>
        </div>

        <div class="form-group col-12">
            <button class="btn btn-outline-primary mr-2">@Html.ActionLink("Back to Clients", "Index")</button>
            <button type="submit" value="CreditApply" class="btn btn-primary px-5">Apply</button>
        </div>

    </div>
}
